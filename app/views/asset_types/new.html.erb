<!-- Validation failure messages -->
<% if @asset_type.errors.any? %>
  <% @asset_type.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Asset Type</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_asset_type" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for adding a new asset type -->
          <div class="form-group">
            <label for="asset_name" class="control-label">
              asset_name
            </label>
            <input type="text" id="asset_name" name="asset_name" placeholder="asset_name" class="form-control" value="<%= @asset_type.asset_name %>">
              </div>



      <button class="btn btn-success">
        Create Asset Type
      </button>
      or
      <a href="/asset_types">Cancel</a>
    </form>
  </div>
</div>
