<div class="page-header">
  <h1>
    Liability types
    <a href="/liability_types/new" class="btn btn-lg btn-success">New Liability type</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Credit cards</th>
        <th>Other current liabilities</th>
        <th>Mortgages</th>
        <th>Student loans</th>
        <th>Automobile loans</th>
        <th>Other long term liabilities</th>
        <th>Actions</th>
      </tr>

      <% @liability_types.each do |liability_type| %>
      <tr>
        <td><%= liability_type.credit_cards %></td>
        <td><%= liability_type.other_current_liabilities %></td>
        <td><%= liability_type.mortgages %></td>
        <td><%= liability_type.student_loans %></td>
        <td><%= liability_type.automobile_loans %></td>
        <td><%= liability_type.other_long_term_liabilities %></td>
        <td>
          <a href="/liability_types/<%= liability_type.id %>" class="btn btn-primary">Show</a>
          <a href="/liability_types/<%= liability_type.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_liability_type/<%= liability_type.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @liability_types, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
