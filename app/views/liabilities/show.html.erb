<div class="page-header">
  <h3>Liability #<%= @liability.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Liabilities type</dt>
      <dd>
        <% if @liability.liabilities_type.present? %>
          <a href="/liability_types/<%= @liability.liabilities_type_id %>">
            <%= @liability.liabilities_type.credit_cards %>
          </a>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @liability.user.present? %>
          <a href="/users/<%= @liability.user_id %>">
            <%= @liability.user.age %>
          </a>
        <% end %>
      </dd>

      <dt>Liabilities value</dt>
      <dd><%= @liability.liabilities_value %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/liabilities" class="btn btn-primary">
        Back
      </a>
      <a href="/liabilities/<%= @liability.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_liability/<%= @liability.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
